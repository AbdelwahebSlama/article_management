{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Creator</th>
                <th>CreatedAt</th>

                    <th>actions</th>


            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td> {{ article.id }}</td>
                <td>{{ article.Title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.creator }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>

                <td>

                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    {% if article.creator == app.user %}
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="link-primary"> edit</a>
                    {% endif %}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
